#!/bin/bash

cvmfs_cfg=/usr/local/bin/cvmfs_config
postinstall_log=/tmp/cvmfs_postinstall

if [ -x $cvmfs_cfg ]; then
  $cvmfs_cfg setup &> $postinstall_log
  if [ $? -ne 0 ]; then
    echo "Configuring cvmfs failed." >> $postinstall_log
    exit 1
  fi
  if [ -d /var/run/cvmfs ]; then
    $cvmfs_cfg reload
  fi
else
  echo "Could not find cvmfs_config script!" >> $postinstall_log
  exit 2
fi
