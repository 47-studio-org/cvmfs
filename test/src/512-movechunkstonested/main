cvmfs_test_name="Move Chunked File To Nested Catalog"
cvmfs_test_autofs_on_startup=false

produce_files_in() {
	local working_dir=$1

	pushdir $working_dir

  mkdir small_files
  echo "Die Sonne tÃ¶nt nach alter Weise"     > small_files/verse1
  echo "In BrudersphÃ¤ren Wettgesang,"        > small_files/verse2
  echo "Und ihre vorgeschriebne Reise"       > small_files/verse3
  echo "Vollendet sie mit Donnergang."       > small_files/verse4
  echo "Ihr Anblick gibt den Engeln StÃ¤rke," > small_files/verse5
  echo "Wenn keiner sie ergrÃ¼nden mag;"      > small_files/verse6
  echo "Die unbegreiflich hohen Werke"       > small_files/verse7
  echo "Sind herrlich wie am ersten Tag."    > small_files/verse8

  # concatinating binary of /bin/ls until we reach a file size of about 50 MiB
  mkdir big_file
  local bigfile=big_file/50megabyte
  touch big_file/50megabyte
  while [ $(stat -c %s $bigfile) -lt 52428800 ]; do
    cat /bin/ls >> $bigfile
  done

	popdir
}

change_files_in() {
  local working_dir=$1

  pushdir $working_dir

  touch big_file/.cvmfscatalog

  popdir
}

cvmfs_run_test() {
  logfile=$1
  local repo_dir=/cvmfs/$CVMFS_TEST_REPO

  local scratch_dir=$(pwd)
  mkdir reference_dir
  local reference_dir=$scratch_dir/reference_dir

  echo "create a fresh repository named $CVMFS_TEST_REPO with user $CVMFS_TEST_USER" >> $logfile
  create_empty_repo $CVMFS_TEST_REPO $CVMFS_TEST_USER >> $logfile 2>&1 || return $?

  echo "starting transaction to edit repository" >> $logfile
  start_transaction $CVMFS_TEST_REPO >> $logfile 2>&1 || return $?

  echo "putting some stuff in the new repository" >> $logfile
  produce_files_in $repo_dir >> $logfile 2>&1 || return 3

  echo "putting exactly the same stuff in the scratch space for comparison" >> $logfile
  produce_files_in $reference_dir >> $logfile 2>&1 || return 4

  echo "creating CVMFS snapshot" >> $logfile
  publish_repo $CVMFS_TEST_REPO >> $logfile 2>&1 || return $?

  echo "compare the results of cvmfs to our reference copy" >> $logfile
  compare_directories $repo_dir $reference_dir >> $logfile || return $?

  echo "check catalog integrity" >> $logfile
  check_catalogs $CVMFS_TEST_REPO >> $logfile 2>&1 || return $?

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

  echo "starting transaction to edit repository" >> $logfile
  start_transaction $CVMFS_TEST_REPO >> $logfile 2>&1 || return $?

  echo "create a nested catalog (chunked entry must be moved there)" >> $logfile
  change_files_in $repo_dir >> $logfile 2>&1 || return 5

  echo "create the nested catalog mark in the reference directory" >> $logfile
  change_files_in $reference_dir >> $logfile 2>&1 || return 6

  echo "creating CVMFS snapshot" >> $logfile
  publish_repo $CVMFS_TEST_REPO >> $logfile 2>&1 || return $?

  echo "compare the results of cvmfs to our reference copy" >> $logfile
  compare_directories $repo_dir $reference_dir >> $logfile || return $?

  echo "check catalog integrity" >> $logfile
  check_catalogs $CVMFS_TEST_REPO >> $logfile 2>&1 || return $?

  return 0
}

